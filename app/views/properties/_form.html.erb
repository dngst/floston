<%= form_with(model: property, class: "contents") do |form| %>
  <div class="my-4">
    <%= form.label :name do %>
      Name <span class="text-red-500">*</span>
    <% end %>
    <%= form.text_field :name, autofocus: true, class: "w-full px-3 py-2 border rounded-lg border-gray-200 mt-2 focus:outline-none focus:border-floston focus:ring-0" %>
    <% if property.errors.include?(:name) %>
      <% property.errors.full_messages_for(:name).each do |error| %>
        <p class="text-red-500 mt-2"><%= error %></p>
      <% end %>
    <% end %>
  </div>

  <%= form.hidden_field :user_id, value: current_user.id %>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-2 px-4 bg-floston text-flostontext inline-block font-medium hover:cursor-pointer" %>
  </div>
<% end %>
