<div id="<%= dom_id property %>">
  <p class="text-2xl capitalize my-4">
    <%= property.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Edit property", edit_property_path(property), class: "rounded-lg py-2 ml-2 px-4 text-gray-500 bg-gray-100 inline-block font-medium" %>
     <div class="inline-block ml-2">
      <% if !property.tenants.present? && !property.articles.present? %>
        <%= button_to "Delete property", property_path(property), method: :delete, data: { turbo_confirm: "Delete property?" }, class: "mt-2 rounded-lg py-2 px-4 bg-gray-100 font-medium text-red-500 bg-red-100" %>
      <% end %>
    </div>
    <hr class="mt-2">
  <% end %>
</div>
