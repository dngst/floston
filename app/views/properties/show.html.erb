<% content_for :title, @property.name %>

<div class="md:w-2/3 w-full">
  <%= link_to sanitize('&larr; back to properties'), properties_path, class: "text-gray-600" %>

  <div class="mx-auto my-4">
    <%= render @property %>

    <%= link_to "Edit property", edit_property_path(@property), class: "mt-2 rounded-lg py-2 px-4 bg-gray-100 font-medium" %>
    <% if @property.can_be_deleted? %>
      <div class="inline-block ml-2">
        <%= button_to "Delete property", property_path(@property), method: :delete, data: { turbo_confirm: "Delete property?" }, class: "mt-2 rounded-lg py-2 px-4 font-medium text-red-500 bg-red-100" %>
      </div>
    <% end %>
  </div>
</div>
