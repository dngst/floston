<%= link_to sanitize('&larr; Back to articles'), articles_path, class: "text-gray-600" %>

<div class="w-full max-w-md mt-4">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">Editing article</h1>
  <% if params[:attribute].present? %>
    <%= render "inline_attribute_form", article: @article %>
  <% else %>
    <%= render "form", article: @article %>
  <% end %>

  <div class="mt-4">
    <%= link_to "View article", @article, class: "text-blue-500 underline mr-4" %>
  </div>
</div>
