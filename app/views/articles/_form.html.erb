<%= form_with(model: article) do |form| %>
  <div class="mt-4">
    <%= form.text_field :title, class: "w-full px-3 py-2 border rounded border-gray-200 mt-2" %>
    <% if @article.errors.include?(:title) %>
      <% @article.errors.full_messages_for(:title).each do |error| %>
        <p class="text-red-500 mt-2"><%= error %></p>
      <% end %>
    <% end %>
  </div>

  <div class="mt-4">
    <%= form.text_area :body, class: "w-full px-3 py-2 border rounded border-gray-200 h-64" %>
    <% if @article.errors.include?(:body) %>
      <% @article.errors.full_messages_for(:body).each do |error| %>
        <p class="text-red-500 mt-2"><%= error %></p>
      <% end %>
    <% end %>
  </div>

  <div class="mt-4">
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="mt-4">
    <%= form.check_box :published, class: "mr-2 border rounded hover:cursor-pointer" %>
    <span class="text-gray-800">Publish</span>
  </div>

  <div class="mt-4">
    <%= form.submit class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 hover:cursor-pointer" %>
  </div>
<% end %>
