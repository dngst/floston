<%= form_with(model: article) do |form| %>
  <div class="mt-4">
    <%= form.label :property, class: "block font-semibold text-gray-800" %>
    <%= form.collection_select(:property_id, Property.my_properties(current_user), :id, :name, { prompt: "Select a property" }, { class: "w-full px-3 py-2 border rounded-lg border-gray-200 mt-2 focus:outline-none focus:border-floston focus:ring-0" }) %>
    <% if @article.errors.include?(:property) %>
      <% @article.errors.full_messages_for(:property).each do |error| %>
        <p class="text-red-500 mt-2"><%= error %></p>
      <% end %>
    <% end %>
  </div>

  <div class="mt-4">
    <%= form.label :title %>
    <%= form.text_field :title, class: "w-full px-3 py-2 border rounded-lg border-gray-200 mt-2 focus:outline-none focus:border-floston focus:ring-0" %>
    <% if @article.errors.include?(:title) %>
      <% @article.errors.full_messages_for(:title).each do |error| %>
        <p class="text-red-500 mt-2"><%= error %></p>
      <% end %>
    <% end %>
  </div>

  <div class="mt-4">
    <%= form.text_area :body, class: "w-full px-3 py-2 border rounded-lg border-gray-200 h-64 focus:outline-none focus:border-floston focus:ring-0" %>
    <% if @article.errors.include?(:body) %>
      <% @article.errors.full_messages_for(:body).each do |error| %>
        <p class="text-red-500 mt-2"><%= error %></p>
      <% end %>
    <% end %>
  </div>


  <div class="mt-4">
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="mt-4">
    <%= form.check_box :published, class: "text-floston mr-2 border rounded-lg hover:cursor-pointer focus:outline-none focus:border-floston focus:ring-0" %>
    <span class="text-gray-800">Publish</span>
  </div>

  <div class="mt-4">
    <%= form.submit class: "bg-floston text-flostontext px-4 py-2 rounded-lg hover:cursor-pointer" %>
  </div>
<% end %>
