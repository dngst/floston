<%= form_with(model: article) do |form| %>
  <div class="">
    <% if article.errors.any? %>
      <div class="text-red-500">
        <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

        <ul>
          <% article.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mt-4">
      <%= form.label :title, class: "block font-semibold text-gray-800" %>
      <%= form.text_field :title, class: "w-full px-4 py-2 border rounded border-gray-300" %>
    </div>

    <div class="mt-4">
      <%= form.text_area :body, class: "w-full px-4 py-2 border rounded border-gray-300 h-64" %>
    </div>

    <div class="mt-4">
      <%= form.number_field :admin_id, value: current_user.id, hidden: true %>
    </div>

    <div class="mt-4">
      <%= form.check_box :published, class: "mr-2" %>
      <span class="text-gray-800">Publish</span>
    </div>

    <div class="mt-4">
      <%= form.submit class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
    </div>
  </div>
<% end %>
