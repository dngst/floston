<% content_for :title, @article.title %>

<div class="w-full lg:max-w-1/2">
  <%= render @article %>

  <% if user_is_admin? %>
    <div class="my-4 flex">
      <%= link_to "Edit article", edit_article_path(@article), draggable:false, class: "mt-2 rounded-lg py-2 px-4 bg-gray-100 font-medium mr-4" %>
      <%= button_to "Delete article", @article, method: :delete, data: { turbo_confirm: "Delete article?" }, class: "mt-2 rounded-lg py-2 px-4 font-medium text-red-500 bg-red-100" %>
    </div>
  </div>
<% end %>

