<div class="w-full max-w-xl">
  <%= render @article %>

  <% if current_user&.admin? %>
    <div class="my-4 flex">
      <%= link_to "Edit article", edit_article_path(@article), draggable:false, class: "text-gray-500 border border-gray-500 hover:bg-gray-100 rounded-lg py-2 px-4 inline-block font-medium mr-4" %>
      <%= button_to "Delete article", @article, method: :delete, data: { turbo_confirm: "Delete article?" }, class: "text-red-400 border border-red-400 hover:bg-red-100 rounded-lg py-2 px-4 inline-block font-medium" %>
    </div>
  </div>
<% end %>

