<%= link_to sanitize('&larr; Back to articles'), articles_path, class: "text-gray-600" %>

<div class="w-full max-w-xl mt-4">
  <%= render @article %>
  <% if current_user&.admin? %>
    <div class="mt-4 flex">
      <%= link_to "Edit article", edit_article_path(@article), class: "text-gray-500 rounded-lg py-2 px-4 bg-gray-100 inline-block font-medium mr-4" %>
      <%= button_to "Delete article", @article, method: :delete, data: { turbo_confirm: "Delete article?" }, class: "text-red-500 rounded-lg py-2 px-4 bg-red-100 inline-block font-medium" %>
    </div>
  </div>
<% end %>

