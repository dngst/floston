<div class="w-full max-w-md">
  <h1 class="text-4xl font-bold mb-6">
    <div class="flex justify-normal">
      <% cache('bx-book-open') do %>
        <%= image_tag "bx-book-open.svg", class: "w-10 mr-2" %>
      <% end %>
      Articles
    </div>
  </h1>

  <% if current_user&.admin? %>
    <%= link_to "Write an article", new_article_path, class:"text-blue-500 hover:underline" %>
  <% end %>

  <% if @articles.any? %>
    <div id="articles" class="mt-4">
      <%= render partial: "article_index", collection: @articles, as: :article, cached: true %>
    </div>
    <div class="my-4">
      <%= paginate @articles %>
    </div>
  <% else %>
    <% if current_user&.admin %>
      <p class="mt-2 text-gray-500">Articles you write will be listed here</p>
    <% else %>
      <p class="mt-2 text-gray-500">New articles will be listed here</p>
    <% end %>
  <% end %>
</div>
