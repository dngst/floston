<dialog id="turbo-confirm" class="bg-white shadow-lg rounded-lg p-6">
  <form method="dialog">
    <p class="text-lg font-semibold">Are you sure?</p>
    <div class="mt-4 flex justify-end">
      <button value="cancel" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-md mr-2">Cancel</button>
      <button value="confirm" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-md">Confirm</button>
    </div>
  </form>
</dialog>
