<div class="flex justify-between my-4">
  <h1 class="text-4xl">
    <div class="flex justify-normal">
      <%= image_tag "bxs-group.svg", class: "w-10 mr-2" %>
      Users
    </div>
  </h1>
  <%= link_to "+ Create user", new_user_registration_path, class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
</div>

<% if @users %>
  <% @users.each do |user| %>
    <% if current_user.id == user.admin_id %>
      <div class="mt-4">
        <div class="border border-gray-300 p-4 rounded flex items-center justify-between max-w-md">
          <div>
            <h3 class="text-xl font-semibold mb-2 capitalize"><%= user.fname %> <%= user.lname %></h3>
            <%= link_to user_path(user), class: "hover:underline" do %>
              <p class="text-gray-600">View profile</p>
            <% end %>
          </div>
          <div class="flex justify-between mx-4">
            <%= link_to edit_user_path(user) do %>
              <%= image_tag "bx-edit.svg" %>
            <% end %>
            <%= link_to user_path(user) do %>
              <%= image_tag "bx-trash.svg" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
<% else %>
  <p class="mt-4 text-gray-600">There are no registered users yet.</p>
<% end %>
