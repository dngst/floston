<div class="flex justify-between mb-4">
  <h1 class="text-3xl">
    <div class="flex justify-normal">
      <%= image_tag "bxs-group.svg", class: "w-10 mr-2" %>
      Tenants
    </div>
  </h1>
  <%= link_to "+ Add tenant", new_user_registration_path, class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
</div>

<% if @users.any?  %>
  <% @users.each do |user| %>
    <% if current_user.id == user.admin_id %>
      <div class="mt-4">
        <div class="border border-gray-300 p-4 rounded flex items-center justify-between max-w-md">
          <div>
            <h3 class="text-xl font-semibold mb-2 capitalize"><%= user.fname %> <%= user.lname %></h3>
            <%= link_to user_path(user), class: "hover:underline" do %>
              <p class="text-gray-600">View profile</p>
            <% end %>
          </div>
          <div class="flex justify-between mx-2">
            <div class="mx-2">
              <%= link_to edit_user_path(user) do %>
                <%= image_tag "bx-edit.svg" %>
              <% end %>
            </div>
            <div class="mx-1">
              <%= link_to user_path(user), method: :delete, data: { confirm: "Delete user?" } do %>
                <%= image_tag "bx-trash.svg" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <p class="mt-4 text-gray-500">You haven't added any tenants yet</p>
    <% end %>
  <% end %>
  <div class="my-4">
    <%= paginate @users %>
  </div>
<% else %>
  <p class="mt-4 text-gray-500">You haven't added any tenants yet</p>
<% end %>
