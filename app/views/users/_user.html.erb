<% if current_user&.id == user.admin_id %>
  <div id="<%= dom_id user%>" class="mt-4">
    <div class="border border-gray-300 p-4 rounded flex items-center justify-between max-w-md">
      <div>
        <h3 class="text-xl font-semibold mb-2 capitalize"><%= user.fname %> <%= user.lname %></h3>
        <%= link_to user_path(user), data: { turbo_frame: "_top" }, class: "hover:underline" do %>
          <p class="text-gray-600">View profile</p>
        <% end %>
      </div>
      <div class="flex justify-between mx-2">
        <div class="mx-2">
          <%= link_to edit_user_path(user) do %>
            <%= image_tag "bx-edit.svg" %>
          <% end %>
        </div>
        <div class="mx-1">
          <%= button_to user, method: :delete, data: { turbo_confirm: "Delete tenant?" } do %>
            <%= image_tag "bx-trash.svg" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
