<%= render "users_pagination", page: page %>

<% page.records.each do |user| %>
  <% if current_user&.id == user.admin_id %>
    <div id="<%= dom_id user%>" class="my-4">
      <div class="border border-gray-300 p-4 rounded flex items-center justify-between max-w-lg">
        <div>
          <h3 class="lg:text-xl md:text-lg font-semibold mb-2 capitalize truncate w-56 lg:w-full"><%= user.fname %> <%= user.lname %></h3>
          <%= link_to user_path(user), data: { turbo_frame: "_top" }, class: "hover:underline" do %>
            <p class="text-gray-600">View profile</p>
          <% end %>
        </div>
        <div class="flex justify-between mx-2">
          <div class="mx-2">
            <%= link_to edit_user_path(user), data: { turbo_frame: "_top"} do %>
              <%= image_tag "bx-edit.svg" %>
            <% end %>
          </div>
          <div class="mx-1">
            <%= link_to user_path(user, page: page.number), data: { 'turbo-method': :delete, turbo_confirm: "Delete tenant?" } do %>
              <%= image_tag "bx-trash.svg" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

<div class="mb-6">
  <%= render "users_pagination", page: page %>
</div>
