<% if current_user&.id == user.admin_id %>
  <div id="<%= dom_id user%>" class="my-4">
    <div class="border border-gray-300 p-4 rounded flex items-center justify-between max-w-lg">
     <div>
        <h3 class="lg:text-xl text-lg font-semibold capitalize w-full"><%= user.fname %> <%= user.lname %></h3>
        <div class="hidden lg:flex">
          <%= link_to user_path(user), data: { turbo_frame: "_top" }, class: "hover:underline" do %>
            <p class="text-gray-600 mt-2">View profile</p>
          <% end %>
        </div>
        <div class="lg:hidden flex flex-col p-4">
          <%= link_to "View profile", user_path(user), data: { turbo_frame: "_top" }, class: "rounded-lg py-2 px-4 text-blue-500 border border-blue-500 hover:bg-blue-100 text-center font-medium w-full mb-3" %>
          <div class="flex">
            <%= link_to "Edit tenant", edit_user_path(user), data: { turbo_frame: "_top" }, class: "rounded-lg py-2 px-4 text-gray-500 border border-gray-500 hover:bg-gray-100 text-center font-medium mr-2" %>
            <%= button_to "Delete tenant", user, method: :delete, data: { turbo_confirm: "Delete tenant?" }, class: "rounded-lg py-2 px-4 text-red-400 border border-red-400 hover:bg-red-100 text-center font-medium" %>
          </div>
        </div>
      </div>

      <div class="flex justify-between mx-2 hidden lg:flex">
        <div class="mx-2">
          <%= link_to edit_user_path(user), data: { turbo_frame: "_top" } do %>
            <% cache('bx-edit.svg') do %>
              <%= image_tag "bx-edit.svg" %>
            <% end %>
          <% end %>
        </div>
        <div class="mx-1">
          <%= link_to user_path(user), data: { 'turbo-method': :delete, turbo_confirm: "Delete tenant?" } do %>
            <% cache('bx-trash.svg') do %>
              <%= image_tag "bx-trash.svg" %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
