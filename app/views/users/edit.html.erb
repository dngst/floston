<div class="max-w-md">
  <%= link_to sanitize('&larr; Back'), :back, class: "text-gray-600" %>
  <h1 class="text-4xl font-bold my-4">Edit Profile</h1>

  <%= form_for(@user, url: user_path(@user), method: :patch) do |f| %>
    <div class="mb-4">
      <%= f.label :fname, "First name", class: "block font-semibold text-gray-800"  %>
      <%= f.text_field :fname, class: "w-full px-4 py-2 border rounded border-gray-300" %>
      <% if @user.errors.include?(:fname) %>
        <% @user.errors.full_messages_for(:fname).each do |error| %>
          <p class="text-red-500 mt-2"><%= error %></p>
        <% end %>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :lname, "Last name", class: "block font-semibold text-gray-800"  %>
      <%= f.text_field :lname, class: "w-full px-4 py-2 border rounded border-gray-300" %>
      <% if @user.errors.include?(:lname) %>
        <% @user.errors.full_messages_for(:lname).each do |error| %>
          <p class="text-red-500 mt-2"><%= error %></p>
        <% end %>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :phone_number, class: "block font-semibold text-gray-800"  %>
      <%= f.text_field :phone_number, class: "w-full px-4 py-2 border rounded border-gray-300" %>
      <% if @user.errors.include?(:phone_number) %>
        <% @user.errors.full_messages_for(:phone_number).each do |error| %>
          <p class="text-red-500 mt-2"><%= error %></p>
        <% end %>
      <% end %>
    </div>

    <%= fields_for @user.tenant do |tenant_fields| %>
      <%= render "devise/registrations/tenant_fields", f: tenant_fields %>
    <% end %>

    <div class="mt-4 mb-6">
      <%= f.submit "Edit", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 hover:cursor-pointer" %>
    </div>
  <% end %>
</div>
