<%= form_tag(search_path, method: :get, data: { turbo_frame: :results_list }) do %>
  <%= text_field_tag :q,
    params[:q],
    placeholder: "Search",
    class: "lg:w-80 w-full border border-gray-300 rounded-full px-3 py-2 focus:outline-none focus:border-gray-400 focus:ring-0",
    oninput: "this.form.requestSubmit()"
  %>
<% end %>
