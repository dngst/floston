<%= form_tag(search_path, method: :get, data: { turbo_frame: :results_list, turbo_action: "advance" }) do %>
  <%= text_field_tag :q,
    params[:q],
    placeholder: "Search...",
    class: "lg:w-96 border border-gray-300 rounded-full px-3 py-2",
    oninput: "setTimeout(() => {
      this.form.requestSubmit();
    }, 3000)"
  %>
<% end %>
