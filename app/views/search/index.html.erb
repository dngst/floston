<div class="max-w-lg">
  <p class="text-4xl mb-6">Search results</p>
  <%= turbo_frame_tag "requests_results" do %>
    <div class="mb-20">
      <% if @requests.any? %>
        <% created_requests = @requests %>
        <% count_text = pluralize(@requests_count.size, "Request") %>
        <h2 class="text-xl mt-4"><%= count_text %></h2>
        <% if created_requests.any? %>
          <% created_requests.each do |request| %>
            <div class="border border-gray-300 p-4 rounded mt-4">
              <%= link_to user_request_path(request.user, request), data: { turbo_frame: "_top" } do %>
                <p class="text-xl font-semibold text-blue-500 hover:underline"><%= request.title %></p>
              <% end %>
            </div>
          <% end %>
        <% end %>
        <div class="mt-4">
          <%= paginate @requests if @requests_count.size > 9 %>
        </div>
      <% end %>
    </div>
  <% end %>

  <%= turbo_frame_tag "articles_results" do %>
    <div class="mb-20">
      <% if @articles.any? %>
        <% created_articles = @articles %>
        <% count_text = pluralize(@articles_count.size, "Article") %>
        <h2 class="text-xl mt-4"><%= count_text %></h2>
        <% if created_articles.any? %>
          <% created_articles.each do |article| %>
            <div class="border border-gray-300 p-4 rounded mt-4">
              <%= link_to article_path(article), data: { turbo_frame: "_top" } do %>
                <p class="text-xl font-semibold text-blue-500 hover:underline"><%= article.title %></p>
              <% end %>
            </div>
          <% end %>
        <% end %>
        <div class="mt-4">
          <%= paginate @articles if @articles_count.size > 9 %>
        </div>
      <% end %>
    </div>
  <% end %>

  <%= turbo_frame_tag "users_results" do %>
    <div class="mb-20">
      <% if current_user&.admin && @users.any? %>
        <% created_users = @users %>
        <% count_text = pluralize(@users_count.size, "User") %>
        <h2 class="text-xl mt-4"><%= count_text %></h2>
        <% if created_users.any? %>
          <% created_users.each do |user| %>
            <div class="border border-gray-300 p-4 rounded mt-4">
              <%= link_to user_path(user), data: { turbo_frame: "_top" } do %>
                <p class="text-xl font-semibold text-blue-500 hover:underline capitalize"><%= "#{user.fname} #{user.lname}" %></p>
              <% end %>
              <p class="mt-2"><%= user.email %></p>
            </div>
          <% end %>
          <div class="mt-4">
            <%= paginate @users if @users_count.size > 9 %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
