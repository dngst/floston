<% if @requests.present? %>
  <%= turbo_frame_tag "requests_results" do %>
    <div class="mb-14">
      <% count_text = pluralize(format_count(@requests.total_count), "Request") %>
      <h2 class="text-xl mt-4"><%= count_text %></h2>
      <% if @requests.present? %>
        <%= render partial: "request", collection: @requests, as: :request, cached: true %>
      <% end %>
      <div class="mt-4">
        <%= paginate @requests if @requests.total_count > 9 %>
      </div>
    </div>
  <% end %>
<% end %>
