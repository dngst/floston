<div class="border border-gray-300 p-4 rounded mt-4">
  <%= link_to user_request_path(request.user, request), draggable:false, data: { turbo_frame: "_top" } do %>
    <p class="text-xl font-semibold <%= 'text-gray-500 line-through' if request.closed %> text-flostonlink hover:underline"><%= request.title %></p>
  <% end %>
  <p class="mt-2 text-gray-800"><%= request.user.name %></p>
</div>
