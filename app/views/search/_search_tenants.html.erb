<% if current_user&.admin && @users.any? %>
  <%= turbo_frame_tag "users_results" do %>
    <div class="mb-14">
      <% count_text = pluralize(@users.total_count, "User") %>
      <h2 class="text-xl mt-4"><%= count_text %></h2>
      <% if @users.any? %>
        <%= render partial: "tenant", collection: @users, as: :user, cached: true %>
        <div class="mt-4">
          <%= paginate @users if @requests.total_count > 9 %>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
