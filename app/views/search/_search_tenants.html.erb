<% if user_is_admin? && @users.present? %>
  <%= turbo_frame_tag "users_results" do %>
    <div class="mb-14">
      <% count_text = pluralize(format_count(@pagy_users.count), "Tenant") %>
      <h2 class="text-xl mt-4"><%= count_text %></h2>
      <% if @users.present? %>
        <%= render partial: "tenant", collection: @users, as: :user, locals: { query: @query } %>
        <div class="mt-4 text-center">
          <%== pagy_nav(@pagy_users) if @pagy_users.pages > 1 %>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
