<% if user_is_admin? && @users.present? %>
  <%= turbo_frame_tag "users_results" do %>
    <div class="mb-14">
      <% count_text = pluralize(format_count(@users.total_count), "Tenant") %>
      <h2 class="text-xl mt-4"><%= count_text %></h2>
      <% if @users.present? %>
        <%= render partial: "tenant", collection: @users, as: :user, locals: { query: @query }, cached: true %>
        <div class="mt-4">
          <%= paginate @users if @users.total_count > 9 %>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
