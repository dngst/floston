<% content_for :title, "Log in" %>

<div class="max-w-md">
  <h2 class="text-4xl font-bold mb-4 text-gray-800">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block font-semibold text-gray-800" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block font-semibold text-gray-800" %>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-4">
        <%= f.check_box :remember_me, checked: true %>
        <%= f.label :remember_me, class: "text-gray-800" %>
      </div>
    <% end %>

    <div class="mt-4">
      <%= f.submit "Log in", class: "btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
