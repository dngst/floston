<div class="max-w-md">
  <%= link_to sanitize('&larr; Back to tenants'), users_path, class: "text-gray-600" %>

  <h1 class="text-4xl font-bold my-4 text-gray-800">New Tenant</h1>

  <%= nested_form_for([resource_name, resource.with_tenant], url: registration_path(resource_name), html: { class: "mt-4" }) do |f| %>
    <div class="mb-4">
      <%= f.label :fname, class: "block font-semibold text-gray-800" do %>
        First name <span class="text-red-500">*</span>
      <% end %>
      <%= f.text_field :fname, placeholder: "Jane", autofocus: true, class: "w-full px-3 py-2 border rounded-lg border-gray-200 mt-2 focus:outline-none focus:border-floston focus:ring-0" %>
      <% if resource.errors.include?(:fname) %>
        <% resource.errors.messages_for(:fname).each do |error| %>
          <p class="text-red-500 mt-2"><%= error %></p>
        <% end %>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :lname, class: "block font-semibold text-gray-800" do %>
        Last name <span class="text-red-500">*</span>
      <% end %>
      <%= f.text_field :lname, placeholder: "Doe", class: "w-full px-3 py-2 border rounded-lg border-gray-200 mt-2 focus:outline-none focus:border-floston focus:ring-0" %>
      <% if resource.errors.include?(:lname) %>
        <% resource.errors.messages_for(:lname).each do |error| %>
          <p class="text-red-500 mt-2"><%= error %></p>
        <% end %>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :phone_number, class: "block font-semibold text-gray-800" do %>
        Phone number <span class="text-red-500">*</span>
      <% end %>
      <%= f.text_field :phone_number, placeholder: "0700000000", class: "w-full px-3 py-2 border rounded-lg border-gray-200 mt-2 focus:outline-none focus:border-floston focus:ring-0" %>
      <% if resource.errors.include?(:phone_number) %>
        <% resource.errors.full_messages_for(:phone_number).each do |error| %>
          <p class="text-red-500 mt-2"><%= error %></p>
        <% end %>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :email, class: "block font-semibold text-gray-800" do %>
        Email <span class="text-red-500">*</span>
      <% end %>
      <%= f.email_field :email, placeholder: "jane.doe@example.com", autocomplete: "email", class: "w-full px-3 py-2 border rounded-lg border-gray-200 mt-2 focus:outline-none focus:border-floston focus:ring-0" %>
      <% if resource.errors.include?(:email) %>
        <% resource.errors.full_messages_for(:email).each do |error| %>
          <p class="text-red-500 mt-2"><%= error %></p>
        <% end %>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.hidden_field :admin_id, value: current_user.id %>
    </div>

    <%= f.fields_for :tenant do |builder| %>
      <%= render "tenant_fields", f: builder %>
    <% end %>

    <div class="mt-4 mb-6">
      <%= f.submit "Add Tenant", class: "bg-floston font-medium text-flostontext px-4 py-2 rounded-lg hover:cursor-pointer" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
