<h1>Sign up</h1>

<%= nested_form_for([resource_name, resource.with_tenant], url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :fname, "First name" %><br />
    <%= f.text_field :fname %>
  </div>

  <div class="field">
    <%= f.label :lname, "Last name" %><br />
    <%= f.text_field :lname %>
  </div>

  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.text_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.number_field :admin_id, value: current_user.id, hidden: true %>
  </div>

  <%= f.fields_for :tenant do |builder| %>
    <%= render "tenant_fields", :f => builder %>
  <% end %>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
