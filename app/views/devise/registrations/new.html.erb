<div class="max-w-md">
  <h1 class="text-4xl font-bold mb-4">Sign up</h1>

  <%= nested_form_for([resource_name, resource.with_tenant], url: registration_path(resource_name), html: { class: "mt-4" }) do |f| %>
    <div class="mb-4">
      <%= f.label :fname, "First name", class: "block font-semibold text-gray-800" %>
      <%= f.text_field :fname, class: "w-full px-4 py-2 border rounded border-gray-300" %>
      <% if resource.errors.include?(:fname) %>
        <% resource.errors.full_messages_for(:fname).each do |error| %>
          <p class="text-red-500 mt-2"><%= error %></p>
        <% end %>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :lname, "Last name", class: "block font-semibold text-gray-800" %>
      <%= f.text_field :lname, class: "w-full px-4 py-2 border rounded border-gray-300" %>
      <% if resource.errors.include?(:lname) %>
        <% resource.errors.full_messages_for(:lname).each do |error| %>
          <p class="text-red-500 mt-2"><%= error %></p>
        <% end %>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :phone_number, class: "block font-semibold text-gray-800" %>
      <%= f.text_field :phone_number, class: "w-full px-4 py-2 border rounded border-gray-300" %>
      <% if resource.errors.include?(:phone_number) %>
        <% resource.errors.full_messages_for(:phone_number).each do |error| %>
          <p class="text-red-500 mt-2"><%= error %></p>
        <% end %>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :email, class: "block font-semibold text-gray-800" %>
      <%= f.email_field :email, autocomplete: "email", class: "w-full px-4 py-2 border rounded border-gray-300" %>
      <% if resource.errors.include?(:email) %>
        <% resource.errors.full_messages_for(:email).each do |error| %>
          <p class="text-red-500 mt-2"><%= error %></p>
        <% end %>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.hidden_field :admin_id, value: current_user.id %>
    </div>

    <%= f.fields_for :tenant do |builder| %>
      <%= render "tenant_fields", f: builder %>
    <% end %>

    <div class="mt-4 mb-6">
      <%= f.submit "Sign up", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
