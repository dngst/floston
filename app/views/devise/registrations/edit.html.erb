<div class="w-full max-w-md mt-4">
  <%= link_to sanitize('&larr; Back'), :back, class: "text-gray-600" %>
  <div class="p-4">
    <h1 class="text-3xl font-bold text-gray-800 mb-4">Edit Profile</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, class: "text-gray-800" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="mb-4 text-gray-800">
          Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.label :password, class: "text-gray-800" %>
        <i class="text-gray-600">(leave blank if you don't want to change it)</i>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded" %>
        <% if @minimum_password_length %>
          <div class="text-gray-600">
            <%= @minimum_password_length %> characters minimum
          </div>
        <% end %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "text-gray-800" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded" %>
      </div>

      <div class="mb-4">
        <%= f.label :current_password, class: "text-gray-800" %>
        <i class="text-gray-600">(we need your current password to confirm your changes)</i>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-3 py-2 border rounded" %>
      </div>

      <div class="mb-4">
        <%= f.submit "Update", class: "bg-blue-500 text-white px-4 py-2 rounded hover:cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
