<% if Property.my_properties(current_user).present? %>
  <div class="mb-4">
    <%= f.label :property, class: "block font-semibold text-gray-800" do %>
      Property <span class="text-red-500">*</span>
    <% end %>
    <%= f.collection_select(:property_id, Property.my_properties(current_user), :id, :name, { prompt: "Select a property" }, { class: "w-full px-3 py-2 border rounded-lg border-gray-300 mt-2 focus:outline-none focus:border-floston focus:ring-floston" }) %>
    <% if f.object.errors.include?(:property) %>
      <% f.object.errors.full_messages_for(:property).each do |error| %>
        <p class="text-red-500 mt-2"><%= error %></p>
      <% end %>
    <% end %>
  </div>
<% else %>
  <div class="mb-4">
    <%= link_to "Create a property first", new_property_path, class: "text-flostonlink underline" %>
  </div>
<% end %>

<div class="mb-4">
  <%= f.label :unit_number, class: "block font-semibold text-gray-800" do %>
    Unit number <span class="text-red-500">*</span>
  <% end %>
  <%= f.text_field :unit_number, placeholder:"D37" ,class: "w-full px-3 py-2 border rounded-lg border-gray-300 mt-2 focus:outline-none focus:border-floston focus:ring-floston" %>
  <% if f.object.errors.include?(:unit_number) %>
    <% f.object.errors.full_messages_for(:unit_number).each do |error| %>
      <p class="text-red-500 mt-2"><%= error %></p>
    <% end %>
  <% end %>
</div>

<div class="mb-4">
  <%= f.label :unit_type, class: "block font-semibold text-gray-800" do %>
    Unit type <span class="text-red-500">*</span>
  <% end %>
  <%= f.select :unit_type, Tenant.unit_types, { prompt: "Select a unit type" }, { class: "w-full px-3 py-2 border rounded-lg border-gray-300 mt-2 focus:outline-none focus:border-floston focus:ring-floston" } %>
  <% if f.object.errors.include?(:unit_type) %>
