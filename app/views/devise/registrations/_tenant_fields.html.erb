  <% end %>
</div>

<div class="mb-4">
  <%= f.label :moved_in, class: "block font-semibold text-gray-800" %>
  <%= f.date_field :moved_in, value: today, class: "w-full px-3 py-2 border rounded-lg border-gray-300 mt-2 focus:outline-none focus:border-floston focus:ring-floston" %>
</div>

<div class="mb-4">
  <%= f.label :next_payment, class: "block font-semibold text-gray-800" %>
