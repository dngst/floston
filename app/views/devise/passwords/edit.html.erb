<div class="max-w-md">
  <h2 class="text-2xl font-semibold mb-4">Change your password</h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="mt-4">
      <%= f.label :password, "New password", class: "block font-semibold text-gray-800" %>
      <% if @minimum_password_length %>
        <em class="text-gray-600">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-lg border-gray-300" %>
    </div>

    <div class="mt-4">
      <%= f.label :password_confirmation, "Confirm new password", class: "block font-semibold text-gray-800" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-lg border-gray-300" %>
    </div>

    <div class="mt-4">
      <%= f.submit "Change my password", class: "bg-floston text-white px-4 py-2 rounded-lg" %>
    </div>
  </form>

  <%= render "devise/shared/links" %>
</div>
