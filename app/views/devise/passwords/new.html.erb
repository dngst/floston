<div class="max-w-md">
  <h2 class="text-2xl font-semibold mb-4">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mt-4">
      <%= f.label :email, class: "block font-semibold text-gray-800" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border rounded border-gray-300" %>
    </div>

    <div class="mt-4">
      <%= f.submit "Send me reset password instructions", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
