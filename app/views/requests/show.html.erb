<div class="w-full max-w-xl">
  <%= link_to sanitize('&larr; Back to requests'), user_requests_path, class: "text-gray-600" %>

  <div class="mt-4">
    <%= render @request %>
  </div>

  <div class="my-4">
    <% if current_user&.admin? %>
      <%= button_to "Delete request", user_request_path(current_user, @request), method: :delete,  data: { turbo_confirm: "Delete request?" }, class: "text-red-500 hover:underline" %>
    <% end %>
  </div>

  <h2 class="text-2xl font-bold text-gray-600 mb-4">Comments</h2>

  <% if @request.comments&.any? %>
    <% @request.comments.each do |comment| %>
      <% if comment.id %>
        <p class="mb-2">
          <% if comment.user_id == @user.admin_id %>
            (Admin)
          <% end %>
          <strong class="capitalize"><%= comment.user.fname %></strong>: <%= comment.body %>
        </p>
      <% end %>
    <% end %>
  <% else %>
    <p>No comments</p>
  <% end %>

  <%= render "comments/form" %>
</div>
